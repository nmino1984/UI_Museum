@model List<ArticleResponseViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="card">
    <div class="card-header">
        @ViewBag.NewTitle
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Damaged</th>
                    <th>Museum</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string isDamaged = "No";
                    string updatedAt = "Not Updated";
                    string createdAt = "";

                    if (item.IsDamaged)
                    {
                        isDamaged = "Si";
                    }

                    createdAt = @item.CreatedAt.ToShortDateString() + ", " + @item.CreatedAt.ToShortTimeString();

                    if (@item.UpdatedAt != null)
                        updatedAt = @item.UpdatedAt!.Value.ToShortDateString();

                    <tr>
                        <td>@item.Name</td>
                        <td>@isDamaged</td>
                        <td>@item.NameMuseum</td>
                        <td>@createdAt </td>
                        <td>@updatedAt</td>
                        <td>
                            <a asp-action="Article" asp-controller="Article" asp-route-articleId="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-controller="Article" asp-route-articleId="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>